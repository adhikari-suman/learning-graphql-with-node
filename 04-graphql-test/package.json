{
  "name": "graphql-basics",
  "version": "1.0.0",
  "main": "index.js",
  "license": "MIT",
  "scripts": {
    "start": "node src/index.js",
    "dev": "dotenv -e .env.test -- nodemon src/index.js --ext js,graphql",
    "db:push:test": "dotenv -e .env.test -- prisma db push",
    "generate": "prisma generate",
    "test": "dotenv -e .env.test -- jest --runInBand",
    "test:watch": "dotenv -e .env.test -- jest --watch --runInBand"
  },
  "jest": {
    "testEnvironment": "node",
    "transform": {
      "^.+\\.js$": "babel-jest"
    },
    "globalSetup": "./tests/jest/globalSetup.cjs",
    "globalTeardown": "./tests/jest/globalTeardown.cjs"
  },
  "dependencies": {
    "@prisma/client": "^6.12.0",
    "apollo-boost": "0.1.14",
    "bcryptjs": "^3.0.2",
    "cross-fetch": "2.2.2",
    "dotenv": "^17.2.1",
    "graphql": "14.7.0",
    "graphql-yoga": "1.16.7",
    "jsonwebtoken": "^9.0.2"
  },
  "devDependencies": {
    "@babel/core": "^7.28.0",
    "@babel/plugin-proposal-object-rest-spread": "^7.20.7",
    "@babel/preset-env": "^7.28.0",
    "babel-jest": "^30.0.5",
    "cross-env": "^10.0.0",
    "dotenv-cli": "^10.0.0",
    "jest": "^29.7.0",
    "nodemon": "^2.0.22",
    "prisma": "^6.12.0"
  }
}
